{
    "PluginName": "Lumion® LiveSync®",
    "PluginDescription": "Lumion® LiveSync® for Autodesk® FormIt Pro®",
    "Platforms": ["Windows"],
    "DLLs" : ["PLUGINLOCATION/LiveSyncNET.dll", "PLUGINLOCATION/LumionAddInDLL.dll"],
    "PanelIcon": "images/about.png",
    "Toolbar": {
        "BackgroundHtml": "index.html",
        "name": "Lumion toolbar",
        "buttons": [{
                "iconText": "LU",
                "iconURL": "images/about.png",
                "command": "LumionLiveSync.Help",
                "useBackgroundContext": true,
                "addSeparator": true
            },
            {
                "iconText": "ST",
                "iconURL": "images/play.png",
                "command": "LumionLiveSync.Start",
                "useBackgroundContext": true,
                "name": "StartButton"
            },
            {
                "iconText": "EN",
                "iconURL": "images/stop.png",
                "command": "LumionLiveSync.End",
                "useBackgroundContext": true,
                "addSeparator": true
            },
            {
                "iconText": "FC",
                "iconURL": "images/camera_stop.png",
                "command": "LumionLiveSync.SyncLumionCameraOn",
                "useBackgroundContext": true,
                "addSeparator": true,
                "name": "CameraButton"
            },
            {
                "iconText": "ON",
                "iconURL": "images/status_inactive.png",
                "command": "LumionLiveSync.NOOP",
                "useBackgroundContext": true,
                "addSeparator": true,
                "name": "StatusButton"
            },
            {
                "iconText": "SE",
                "iconURL": "images/settings.png",
                "command": "LumionLiveSync.Settings",
                "useBackgroundContext": true,
                "addSeparator": true
            },
            {
                "iconText": "EX",
                "iconURL": "images/export.png",
                "command": "LumionLiveSync.Export",
                "useBackgroundContext": true
            }
        ]
    }
}